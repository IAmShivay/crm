# ==============================================
# CRM System Environment Configuration
# ==============================================

# Environment
NODE_ENV=development

# ==============================================
# Database Configuration
# ==============================================

# MongoDB Connection String
# Development: mongodb://localhost:27017/crm_development
# Production: mongodb+srv://username:password@cluster.mongodb.net/crm_production
MONGODB_URI=mongodb://localhost:27017/crm_development

# ==============================================
# Authentication & Security
# ==============================================

# JWT Secret Key (MUST be 256+ bits in production)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secure-256-bit-secret-key-here

# JWT Token Expiration
JWT_EXPIRES_IN=7d

# Password Salt Rounds (12 recommended for production)
BCRYPT_SALT_ROUNDS=12

# ==============================================
# API Keys & External Services
# ==============================================

# Dodo Payments Configuration
DODO_API_KEY=your-dodo-api-key
NEXT_PUBLIC_DODO_PUBLIC_KEY=your-dodo-public-key
DODO_WEBHOOK_SECRET=your-dodo-webhook-secret

# Email Service (for notifications)
EMAIL_SERVICE_API_KEY=your-email-service-api-key
EMAIL_FROM_ADDRESS=noreply@yourcrm.com
EMAIL_FROM_NAME=Your CRM System

# ==============================================
# Security Configuration
# ==============================================

# Allowed Origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=86400000

# ==============================================
# File Upload & Storage
# ==============================================

# Maximum file upload size (in bytes)
MAX_FILE_SIZE=5242880

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Storage Configuration (AWS S3, Google Cloud, etc.)
STORAGE_PROVIDER=local
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# ==============================================
# Monitoring & Logging
# ==============================================

# Application Monitoring
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Analytics
GOOGLE_ANALYTICS_ID=your-ga-id

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# ==============================================
# Feature Flags
# ==============================================

# Enable/disable features
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_REAL_TIME_UPDATES=false
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_FILE_UPLOADS=false

# ==============================================
# Development Configuration
# ==============================================

# Debug mode
DEBUG=false

# Enable development tools
ENABLE_DEV_TOOLS=true

# Mock external services in development
MOCK_EXTERNAL_SERVICES=true

# ==============================================
# Production-Specific Configuration
# ==============================================

# SSL/TLS Configuration
FORCE_HTTPS=false
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Database Connection Pool
DB_MIN_POOL_SIZE=5
DB_MAX_POOL_SIZE=20

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# CDN Configuration
CDN_URL=https://cdn.yourdomain.com

# ==============================================
# Backup & Recovery
# ==============================================

# Database Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# ==============================================
# Compliance & Privacy
# ==============================================

# GDPR Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555

# Cookie Configuration
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax
COOKIE_HTTP_ONLY=true

# ==============================================
# Performance Configuration
# ==============================================

# Next.js Configuration
NEXT_TELEMETRY_DISABLED=1

# Image Optimization
NEXT_IMAGE_DOMAINS=localhost,yourdomain.com

# ==============================================
# Webhook Configuration
# ==============================================

# Webhook timeout (in milliseconds)
WEBHOOK_TIMEOUT=30000

# Webhook retry attempts
WEBHOOK_MAX_RETRIES=3

# Webhook signature verification
WEBHOOK_VERIFY_SIGNATURES=true

# ==============================================
# Third-Party Integrations
# ==============================================

# CRM Integrations
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret

HUBSPOT_API_KEY=your-hubspot-api-key

# Communication Services
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Social Media APIs
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ==============================================
# Testing Configuration
# ==============================================

# Test Database
TEST_MONGODB_URI=mongodb://localhost:27017/crm_test

# Test API Keys (use sandbox/test keys)
TEST_DODO_API_KEY=test-dodo-api-key
TEST_EMAIL_SERVICE_API_KEY=test-email-api-key

# ==============================================
# Docker Configuration (if using Docker)
# ==============================================

# Docker-specific environment variables
DOCKER_ENV=false
CONTAINER_PORT=3000

# ==============================================
# Load Balancer & Scaling
# ==============================================

# Health check endpoint
HEALTH_CHECK_PATH=/api/health

# Graceful shutdown timeout
SHUTDOWN_TIMEOUT=30000

# Worker processes (for PM2 or similar)
WORKER_PROCESSES=auto

# ==============================================
# Audit & Compliance Logging
# ==============================================

# Audit log configuration
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=90

# Compliance reporting
COMPLIANCE_REPORTING_ENABLED=false
COMPLIANCE_REPORT_EMAIL=compliance@yourcompany.com
