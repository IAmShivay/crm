# ==============================================
# CRM System - Production Environment
# ==============================================

# Environment
NODE_ENV=production

# ==============================================
# Database Configuration
# ==============================================

# MongoDB Atlas Production Connection
MONGODB_URI=mongodb+srv://prod_user:SECURE_PASSWORD@cluster-prod.mongodb.net/crm_production?retryWrites=true&w=majority

# ==============================================
# Authentication & Security
# ==============================================

# JWT Secret Key (MUST be unique and secure in production)
JWT_SECRET=REPLACE_WITH_SECURE_256_BIT_KEY_GENERATED_WITH_OPENSSL

# JWT Token Expiration (shorter for production)
JWT_EXPIRES_IN=24h

# Password Salt Rounds (higher for production)
BCRYPT_SALT_ROUNDS=14

# ==============================================
# API Keys & External Services
# ==============================================

# Dodo Payments Production
DODO_API_KEY=live_dodo_api_key_here
NEXT_PUBLIC_DODO_PUBLIC_KEY=pk_live_dodo_public_key_here
DODO_WEBHOOK_SECRET=whsec_production_webhook_secret

# Email Service Production
EMAIL_SERVICE_API_KEY=prod_email_service_api_key
EMAIL_FROM_ADDRESS=noreply@yourcrm.com
EMAIL_FROM_NAME=Your CRM System

# ==============================================
# Security Configuration
# ==============================================

# Production Allowed Origins
ALLOWED_ORIGINS=https://yourcrm.com,https://www.yourcrm.com,https://app.yourcrm.com

# Strict Rate Limiting for Production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Secure Session Configuration
SESSION_SECRET=REPLACE_WITH_SECURE_SESSION_SECRET
SESSION_TIMEOUT=3600000

# ==============================================
# SSL/TLS & Security Headers
# ==============================================

# Force HTTPS in production
FORCE_HTTPS=true

# Secure Cookie Settings
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict
COOKIE_HTTP_ONLY=true

# ==============================================
# File Upload & Storage
# ==============================================

# AWS S3 Production Configuration
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
AWS_REGION=us-east-1
AWS_S3_BUCKET=yourcrm-prod-uploads

# Stricter file limits for production
MAX_FILE_SIZE=2097152
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# ==============================================
# Monitoring & Logging
# ==============================================

# Sentry Production Configuration
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Google Analytics Production
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X

# Production Logging
LOG_LEVEL=warn

# ==============================================
# Feature Flags - Production
# ==============================================

FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_FILE_UPLOADS=true

# ==============================================
# Production Performance
# ==============================================

# Database Connection Pool
DB_MIN_POOL_SIZE=10
DB_MAX_POOL_SIZE=50

# Redis Cache Production
REDIS_URL=redis://prod-redis-cluster:6379
CACHE_TTL=1800

# CDN Configuration
CDN_URL=https://cdn.yourcrm.com

# ==============================================
# Backup & Recovery
# ==============================================

BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90
BACKUP_STORAGE_PATH=s3://yourcrm-backups/

# ==============================================
# Compliance & Privacy
# ==============================================

GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555

# ==============================================
# Production Webhooks
# ==============================================

WEBHOOK_TIMEOUT=15000
WEBHOOK_MAX_RETRIES=5
WEBHOOK_VERIFY_SIGNATURES=true

# ==============================================
# Third-Party Integrations - Production
# ==============================================

# Production API Keys
SALESFORCE_CLIENT_ID=prod_salesforce_client_id
SALESFORCE_CLIENT_SECRET=prod_salesforce_client_secret

HUBSPOT_API_KEY=prod_hubspot_api_key

TWILIO_ACCOUNT_SID=prod_twilio_account_sid
TWILIO_AUTH_TOKEN=prod_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ==============================================
# Load Balancer & Scaling
# ==============================================

HEALTH_CHECK_PATH=/api/health
SHUTDOWN_TIMEOUT=30000
WORKER_PROCESSES=4

# ==============================================
# Audit & Compliance
# ==============================================

AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=2555

COMPLIANCE_REPORTING_ENABLED=true
COMPLIANCE_REPORT_EMAIL=compliance@yourcompany.com

# ==============================================
# Production Optimizations
# ==============================================

# Next.js Production Settings
NEXT_TELEMETRY_DISABLED=1
NEXT_IMAGE_DOMAINS=yourcrm.com,cdn.yourcrm.com

# Disable development features
DEBUG=false
ENABLE_DEV_TOOLS=false
MOCK_EXTERNAL_SERVICES=false
