{
  "info": {
    "name": "CRM API Collection",
    "description": "Complete API collection for the CRM system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "workspaceId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newuser@example.com\",\n  \"password\": \"password123\",\n  \"fullName\": \"John Doe\",\n  \"workspaceName\": \"My Company\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/signup",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "signup"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Leads",
      "item": [
        {
          "name": "Get Leads",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/leads?workspaceId={{workspaceId}}&page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["leads"],
              "query": [
                {
                  "key": "workspaceId",
                  "value": "{{workspaceId}}"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "status",
                  "value": "new",
                  "disabled": true
                },
                {
                  "key": "search",
                  "value": "john",
                  "disabled": true
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Lead",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"workspaceId\": \"{{workspaceId}}\",\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"+1234567890\",\n  \"company\": \"Acme Corp\",\n  \"status\": \"new\",\n  \"source\": \"website\",\n  \"value\": 5000,\n  \"priority\": \"medium\",\n  \"notes\": \"Initial contact notes\",\n  \"customFields\": {\n    \"industry\": \"Technology\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/leads",
              "host": ["{{baseUrl}}"],
              "path": ["leads"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Lead Notes",
      "item": [
        {
          "name": "Get Lead Notes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/leads/:leadId/notes?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["leads", ":leadId", "notes"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ],
              "variable": [
                {
                  "key": "leadId",
                  "value": "lead-id-here"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Lead Note",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Had a great call with the client\",\n  \"type\": \"call\",\n  \"isPrivate\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/leads/:leadId/notes",
              "host": ["{{baseUrl}}"],
              "path": ["leads", ":leadId", "notes"],
              "variable": [
                {
                  "key": "leadId",
                  "value": "lead-id-here"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Tags",
      "item": [
        {
          "name": "Get Tags",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tags?workspaceId={{workspaceId}}",
              "host": ["{{baseUrl}}"],
              "path": ["tags"],
              "query": [
                {
                  "key": "workspaceId",
                  "value": "{{workspaceId}}"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Tag",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"workspaceId\": \"{{workspaceId}}\",\n  \"name\": \"Hot Lead\",\n  \"color\": \"#ff0000\",\n  \"description\": \"High priority leads\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tags",
              "host": ["{{baseUrl}}"],
              "path": ["tags"]
            }
          },
          "response": []
        },
        {
          "name": "Update Tag",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Tag Name\",\n  \"color\": \"#00ff00\",\n  \"description\": \"Updated description\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tags/:tagId",
              "host": ["{{baseUrl}}"],
              "path": ["tags", ":tagId"],
              "variable": [
                {
                  "key": "tagId",
                  "value": "tag-id-here"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Delete Tag",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tags/:tagId",
              "host": ["{{baseUrl}}"],
              "path": ["tags", ":tagId"],
              "variable": [
                {
                  "key": "tagId",
                  "value": "tag-id-here"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Lead Statuses",
      "item": [
        {
          "name": "Get Lead Statuses",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/lead-statuses?workspaceId={{workspaceId}}",
              "host": ["{{baseUrl}}"],
              "path": ["lead-statuses"],
              "query": [
                {
                  "key": "workspaceId",
                  "value": "{{workspaceId}}"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Lead Status",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"workspaceId\": \"{{workspaceId}}\",\n  \"name\": \"New\",\n  \"color\": \"#3b82f6\",\n  \"description\": \"Newly created leads\",\n  \"order\": 1,\n  \"isDefault\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/lead-statuses",
              "host": ["{{baseUrl}}"],
              "path": ["lead-statuses"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
