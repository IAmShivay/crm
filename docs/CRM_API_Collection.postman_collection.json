            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('lead_id', response.id);",
                  "    pm.test('Lead created successfully', function () {",
                  "        pm.expect(response.name).to.equal('John Smith');",
                  "        pm.expect(response.email).to.equal('john.smith@example.com');",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
