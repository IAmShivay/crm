            "body": {
              "mode": "raw",
              "raw": "{\n  \"workspaceId\": \"{{workspace_id}}\",\n  \"name\": \"John Smith\",\n  \"email\": \"john.smith@example.com\",\n  \"phone\": \"+1234567890\",\n  \"company\": \"Acme Corporation\",\n  \"status\": \"new\",\n  \"source\": \"website\",\n  \"value\": 5000,\n  \"notes\": \"Interested in enterprise plan\"\n}"
