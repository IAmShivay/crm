{
  "info": {
    "name": "CRM API - Enhanced Security Collection",
    "description": "Comprehensive API testing collection for MongoDB-based CRM with enhanced security features",
    "version": "2.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// Auto-refresh token if expired",
          "const tokenExpiry = pm.environment.get('token_expiry');",
          "if (tokenExpiry && Date.now() > parseInt(tokenExpiry)) {",
          "    console.log('Token expired, please re-authenticate');",
          "    pm.environment.unset('auth_token');",
          "}"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "{{base_url}}",
      "type": "string"
    },
    {
      "key": "workspace_id",
      "value": "{{workspace_id}}",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "üîê Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('auth_token', response.token);",
                  "    pm.environment.set('user_id', response.user.id);",
                  "    pm.environment.set('workspace_id', response.workspace.id);",
                  "    pm.environment.set('token_expiry', Date.now() + (7 * 24 * 60 * 60 * 1000));",
                  "    console.log('‚úÖ Login successful, token saved');",
                  "} else {",
                  "    console.log('‚ùå Login failed:', pm.response.json());",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Requested-With",
                "value": "XMLHttpRequest"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"password\": \"{{test_password}}\",\n  \"timestamp\": {{$timestamp}},\n  \"clientInfo\": {\n    \"userAgent\": \"Postman/{{$postman_version}}\",\n    \"timezone\": \"UTC\",\n    \"language\": \"en-US\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('auth_token', response.token);",
                  "    pm.environment.set('user_id', response.user.id);",
                  "    pm.environment.set('workspace_id', response.workspace.id);",
                  "    pm.environment.set('token_expiry', Date.now() + (7 * 24 * 60 * 60 * 1000));",
                  "    console.log('‚úÖ Registration successful, token saved');",
                  "} else {",
                  "    console.log('‚ùå Registration failed:', pm.response.json());",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"{{test_full_name}}\",\n  \"email\": \"{{test_email}}\",\n  \"password\": \"{{test_password}}\",\n  \"workspaceName\": \"{{test_workspace_name}}\",\n  \"timestamp\": {{$timestamp}},\n  \"clientInfo\": {\n    \"userAgent\": \"Postman/{{$postman_version}}\",\n    \"timezone\": \"UTC\",\n    \"language\": \"en-US\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/signup",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "signup"]
            }
          }
        }
      ]
    },
    {
