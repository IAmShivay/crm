              "raw": "{\n  \"name\": \"Hot Lead\",\n  \"color\": \"#ef4444\",\n  \"description\": \"High priority leads\",\n  \"workspaceId\": \"{{workspace_id}}\",\n  \"order\": 1,\n  \"isDefault\": false,\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/lead-statuses?workspaceId={{workspace_id}}",
              "host": ["{{base_url}}"],
              "path": ["lead-statuses"],
              "query": [
                {
                  "key": "workspaceId",
                  "value": "{{workspace_id}}"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Tags",
      "item": [
