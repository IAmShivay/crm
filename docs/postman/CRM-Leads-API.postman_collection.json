          "name": "Get Workspace Members",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/workspaces/{{workspace_id}}/members",
              "host": ["{{base_url}}"],
              "path": ["workspaces", "{{workspace_id}}", "members"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
