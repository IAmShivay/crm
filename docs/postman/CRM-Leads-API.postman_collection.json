{
  "info": {
    "name": "CRM Leads API",
    "description": "Complete API collection for managing leads in the CRM system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "workspace_id",
      "value": "your-workspace-id",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "your-jwt-token",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Leads",
      "item": [
        {
          "name": "Get Leads",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/leads?workspaceId={{workspace_id}}&page=1&limit=20",
              "host": ["{{base_url}}"],
              "path": ["leads"],
              "query": [
                {
                  "key": "workspaceId",
                  "value": "{{workspace_id}}"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "search",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "status",
                  "value": "",
                  "disabled": true
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Lead",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"+1234567890\",\n  \"company\": \"Acme Corp\",\n  \"source\": \"website\",\n  \"value\": 5000,\n  \"statusId\": \"status123\",\n  \"tagIds\": [\"tag123\", \"tag456\"],\n  \"assignedTo\": \"user123\",\n  \"notes\": \"Interested in premium package\",\n  \"workspaceId\": \"{{workspace_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/leads",
              "host": ["{{base_url}}"],
              "path": ["leads"]
            }
          },
          "response": []
        },
        {
          "name": "Update Lead",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe Updated\",\n  \"email\": \"john.updated@example.com\",\n  \"phone\": \"+1234567890\",\n  \"company\": \"Acme Corp Updated\",\n  \"source\": \"referral\",\n  \"value\": 7500,\n  \"statusId\": \"status456\",\n  \"tagIds\": [\"tag123\", \"tag789\"],\n  \"assignedTo\": \"user456\",\n  \"notes\": \"Updated notes about the lead\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/leads/:leadId?workspaceId={{workspace_id}}",
              "host": ["{{base_url}}"],
              "path": ["leads", ":leadId"],
              "query": [
                {
                  "key": "workspaceId",
                  "value": "{{workspace_id}}"
                }
              ],
              "variable": [
                {
                  "key": "leadId",
                  "value": "lead123"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Delete Lead",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/leads/:leadId?workspaceId={{workspace_id}}",
              "host": ["{{base_url}}"],
              "path": ["leads", ":leadId"],
              "query": [
                {
                  "key": "workspaceId",
                  "value": "{{workspace_id}}"
                }
              ],
              "variable": [
                {
                  "key": "leadId",
                  "value": "lead123"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
